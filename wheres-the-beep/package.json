{
  "name": "vr-audio-game",
  "description": "WebXR game around positional audio.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "format": "prettier src/**/*.ts test/**/*.ts *.{html,css,js} --write",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NotWoods/vr-audio-game.git"
  },
  "dependencies": {
    "spherical-geometry-js": "^3.0.0",
    "three": "^0.134.0"
  },
  "devDependencies": {
    "@types/float-equal": "^3.0.0",
    "@types/three": "^0.133.1",
    "@types/webxr": "^0.2.3",
    "ava": "^3.15.0",
    "float-equal": "^3.0.0",
    "prettier": "~2.4.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.7.0-beta.3",
    "vite-plugin-pwa": "^0.11.3"
  },
  "ava": {
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
}
